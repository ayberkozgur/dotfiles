[user]
    email = ayberk.ozgur@epfl.ch
    name = ayberkozgur
[core]
    editor = vim
	pager = less -r
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    pullr = !git fetch && git rebase --autostash FETCH_HEAD
    dif = diff --color-words
    difs = diff --color-words --staged
    unstage = reset HEAD

    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard

[credential]
    helper = cache
[http]
    cookiefile = /home/equilibrium/.gitcookies

